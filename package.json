{
  "name": "sqls",
  "description": "SQL Language Server Extension for Visual Studio Code",
  "author": "senken",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lighttiger2505/vscode-sqls"
  },
  "bugs": {
    "url": "https://github.com/lighttiger2505/vscode-sqls"
  },
  "publisher": "lighttiger2505",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.sql",
    "onLanguage:sql"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "sqls",
      "properties": {
        "go.languageServerFlags": {
          "type": "array",
          "default": [],
          "description": "Flags like -trace and -log to be used while running the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd .."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.24",
    "cspell": "^8.5.0",
    "lefthook": "^1.6.4",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
